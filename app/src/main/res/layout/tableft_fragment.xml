<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tableft_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorXian"/>

        <View
            android:id="@+id/xiantiao"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorQianXian"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.meg7.widget.CircleImageView
                android:id="@+id/tableft_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/authername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tableft_image"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_user_home_next"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>


</LinearLayout>